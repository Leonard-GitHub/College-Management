<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_black"
        android:layout_marginTop="50dp"
        android:letterSpacing=".05"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/login_signup_edittext_bg"
        android:drawablePadding="8dp"
        android:drawableTint="@color/lighthotred"
        android:ems="10"
        android:fontFamily="@font/sequel_sans_light_head"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/lighthotred"
        android:textColorHint="@color/lighthotred"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintWidth_percent=".9" />

        <EditText
            android:id="@+id/edit_text_emailaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/login_signup_edittext_bg"
            android:drawablePadding="8dp"
            android:drawableTint="@color/lighthotred"
            android:ems="10"
            android:fontFamily="@font/sequel_sans_light_head"
            android:hint="EMAIL"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/lighthotred"
            android:textColorHint="@color/lighthotred"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_name"
            app:layout_constraintWidth_percent=".9" />


        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/login_signup_edittext_bg"
            android:drawablePadding="8dp"
            android:drawableTint="@color/lighthotred"
            android:ems="10"
            android:fontFamily="@font/sequel_sans_light_head"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/lighthotred"
            android:textColorHint="@color/lighthotred"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_emailaddress"
            app:layout_constraintWidth_percent=".9" />

        <EditText
            android:id="@+id/editTextTextConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/login_signup_edittext_bg"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/sequel_sans_light_head"
            android:hint="CONFIRM PASSWORD"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/lighthotred"
            android:textColorHint="@color/lighthotred"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_password"
            app:layout_constraintWidth_percent=".9" />


    <CheckBox
        android:id="@+id/student_chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="@string/meat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextConfirmPassword" />


    <CheckBox
        android:id="@+id/teacher_chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="@string/cheese"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextConfirmPassword" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/normal_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/login_btn_background"
            android:text="Sign up"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teacher_chk" />


</androidx.constraintlayout.widget.ConstraintLayout>